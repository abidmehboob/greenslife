{
  "name": "flower-distribution-app",
  "version": "1.0.0",
  "description": "MEAN stack ecommerce application for flower distribution",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "cd client && npm start",
    "client-install": "cd client && npm install",
    "client-build": "cd client && npm run build",
    "dev-full": "concurrently \"npm run dev\" \"npm run client\"",
    "build": "npm run client-install && npm run client-build",
    "production": "npm run build && concurrently \"npm run start\" \"node production-server.js\"",
    "deploy": "npm run build && echo Deployment ready! Start with: npm run production",
    "heroku-postbuild": "npm run build",
    "seed": "node seed.js",
    "seed-flowers": "node scripts/seedFlowers.js",
    "create-images": "node scripts/createPlaceholderImages.js",
    "create-test-users": "node scripts/createTestUsers.js",
    "migrate": "node scripts/migrateCarnationData.js",
    "migrate-docker": "scripts\\migrate-database.bat"
  },
  "keywords": [
    "ecommerce",
    "flowers",
    "mean-stack",
    "express",
    "mongodb",
    "angular"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/pg": "^8.15.6",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "handlebars": "^4.7.8",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.10.1",
    "pg": "^8.16.3",
    "sequelize": "^6.37.7",
    "sequelize-cli": "^6.6.3",
    "sqlite3": "^5.1.7",
    "stripe": "^13.6.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1"
  }
}
